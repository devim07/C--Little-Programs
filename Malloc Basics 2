//accepting 2d array using malloc
#include <stdio.h>
#include <malloc.h>
int main()
{
    int *p[3]; 
 	int i,j,c;
	int size[3];
	for(i=0;i<3;i++)
	{	 
	    printf("enter number of column: ");
	    scanf("%d",&c) ;//3 2 3
		size[i]=c;
		printf("Enter the %d elements: ", c);
		p[i]= (int *)malloc(c*sizeof(int));
		for(j=0;j<c;j++)
		    scanf("%d",&p[i][j]);
	}
	for(i=0;i<3;i++)
	{
		for(j=0;j<size[i];j++)
		    printf("%d\t",p[i][j]);
		printf("\n");
	}
	return 0;
}
