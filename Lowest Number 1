//Find the lowest number in the array
#include<stdio.h>
int main()
{
    int n, i, min=0, arr[20];
    printf("Enter the numbers of elements in array: ");
    scanf("%d", &n);
    printf("Enter the elements of the array: ");
    scanf("%d", &arr[0]);
    min=arr[0];
    for(i=1; i<n; i++)
    {
        scanf("%d", &arr[i]);
        if(min>arr[i])
            min=arr[i];
    }
    printf("The smallest numbers is %d", min);
    return 0;
}
