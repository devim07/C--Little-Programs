//Accept a name accept a character and delete all occurrence of that character  
#include <stdio.h>
#include <string.h>
int main()
{
    char str[30], ch='i';
    int i,n;
    printf("Enter any string: ");
    gets(str);
    n=strlen(str);
    printf("Enter any character: ");
    scanf("%c", &ch);
    for(i=0; i<strlen(str); i++)
    {
        if(str[i]!=ch)
            printf("%c", str[i]);
    }
    return 0;
}
