//copying block of data
#include<stdio.h>
int main()
{
    int n, i, arr[20], copy[20];
    printf("Enter the numbers of elements in array: ");
    scanf("%d", &n);
    printf("Enter the elements of the array: ");
    for(i=0; i<n; i++)
    {
        scanf("%d", &arr[i]);
        copy[i]=arr[i];
    }
    for(i=0; i<n; i++)
        printf("%d\t", copy[i]);
}
