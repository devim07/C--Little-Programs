//Accept a sentence  from user and count number of space
#include <stdio.h>
#include <string.h>
int main()
{
    char str[30];
    int i,n,num=0;
    printf("Enter any string: ");
    gets(str);
    n=strlen(str);
    for(i=0; i<strlen(str); i++)
    {
        if(str[i]==' ')
            num++;
    }
    printf("There are %d spaces in the given string", num);
    return 0;
}
